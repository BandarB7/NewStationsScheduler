@page
@model StationsScheduler.Pages.Core.Schedule.CreateModel

<h4>ProductSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<select asp-for="Schedule.ProductID" asp-items='new SelectList(Model.Products,"ProductID","Name")' class="form-control"></select>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div id="gridDiv">
					<label asp-for="Schedule.StationID" class="control-label"></label>
					<div class="repeat">
						<select asp-for="Schedule.StationID" asp-items='new SelectList(Model.Stations,"StationID","Name")' class="form-control"></select>
						<span asp-validation-for="Schedule.StationID" class="text-danger"></span>
				</div>
					<label asp-for="Schedule.Time" class="control-label"></label>
					<div class="repeat">
						<input asp-for="Schedule.Time" class="form-control" />
						<span asp-validation-for="Schedule.Time" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
